<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:toDegrees="270">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="10">
        <solid android:color="@android:color/transparent" /> <!-- Ustawienie przezroczystego tÅ‚a -->
        <stroke
            android:width="1dp"
        android:color="#000000" /> <!-- Kolor czarny dla obramowania -->
        <gradient
            android:centerColor="#FFC107"
            android:endColor="#FF5722"
            android:startColor="#CDDC39"
            android:type="sweep" />
    </shape>
</rotate>